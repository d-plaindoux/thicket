module Lang.Strict

/* 
 * Language syntactic extension
 * 
 *     strict f x forces the evaluation of x
 */

class strictClass[a] this:a {
    fold : [b] (a -> b) -> b
} {
    def fold f = f this
}

def strict : [a,b] (a -> b) -> a -> b = f a -> {
    strictClass a fold f
}
